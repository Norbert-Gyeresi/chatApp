<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="clientUI.MainPage">

    <StackLayout>
        <Label Text="TCP Szerver Kapcsolat" FontSize="Title" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0" />

        <Entry x:Name="MessageEntry" Placeholder="Üzenet" Margin="20" />
        <Button x:Name="SendMessageButton" Text="Üzenet Küldése" Clicked="SendMessageButton_Clicked" Margin="20" />

        <Label x:Name="StatusLabel" Text="" FontSize="Body" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>